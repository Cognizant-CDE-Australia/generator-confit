/*
 * Swanky Theme
 * Typography
 */

body
  line-height rem(22)

h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6
  font-weight 300
  font-family 'Open Sans', sans-serif
  display block

h1, .h1
  font-size 3rem

h2, .h2
  font-size 2.2rem
  padding 0 0 2rem
  margin 2rem 0 4rem
  border-bottom 1px solid $border-colour
  width 100%

h3, .h3
  font-size 1.8rem
  margin 2rem 0 2rem

h4, .h4
  font-size 1.6rem
  margin 2rem 0 1rem

h5, .h5
  font-size 1.3rem

h6, .h6
  font-size 1.1rem

.lead
  margin 0 0 6rem 0
  padding 0 20px
  font-size 1.6rem
  border-left 2px solid $brand-primary

  @media screen and (min-width: $screen-is-bigger-than-md-desktop)
    column-count 2
    column-gap 4rem

strong
  font-weight 600

// Links
a, &:visited
  color $brand-primary
  text-decoration none

  &:hover
    text-decoration underline

blockquote
  margin 0 0 6rem 0
  padding 0 20px
  font-style italic
  border-left 2px solid $brand-primary

p
  max-width 800px

p, ul, ol
  margin-bottom 1.5rem

hr
  margin-top 40px
  margin-bottom 40px
  border 0
  border-top 1px solid $border-colour

em
  font-style italic

.page-header
  display block
  padding 0 0 2rem
  box-sizing border-box
  margin-bottom 4rem
  border-bottom 1px solid $border-colour

  @media screen and (min-width: $screen-is-bigger-than-tablet)
    margin 0
    position fixed
    padding 5rem 0 0 0
    height $header-height
    width 100%
    background #fff
    top 0;
    z-index 10

.text-block
  border-left 2px solid $malachite
  padding-left 30px
  margin 0 0 20px 0

.text-center
  text-align center

pre, code
  font-family: Consolas, "Liberation Mono", Menlo, Courier, monospace
  font-size: 95%
