.grid-wrapper
  position relative
  background #eee
  margin-bottom: 2rem

  .psuedo-grid-columns
    position absolute
    width 100%
    height 100%

    .col
      height 100%

    .col-shadow
      height 100%

  .grid-shadow

    &:after
      content ''
      display table
      clear both

  .col-shadow
    background rgba(0, 200, 255, 0.3)
    height 100px
    border 1px solid rgba(0, 200, 255, 0.5)
    box-sizing border-box

  .col-label
    font-family Monaco, Consolas, "Lucida Console", monospace
    word-wrap: normal;
    font-size 1.1rem
    padding 1rem
