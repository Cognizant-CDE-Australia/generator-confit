.card-action
  .counter
    vertical-align: middle
    position: relative
    display: inline-block
    height: 34px
    line-height: @height
    text-align: center
    background: #F5F5F5
    box-sizing: border-box
    padding: 0 20px
    margin-left: 8px

    .arrow
      position: absolute
      left: -6px
      top: 50%
      margin-top: -6px
      width: 0
      height: 0
      border-top: 6px solid transparent
      border-bottom: 6px solid transparent
      border-right: 6px solid #F5F5F5

.card-action
  display: inline-block
  margin: 0 15px 0 0

  button
    vertical-align: middle
    outline: 0
    width: 38px
    height: 38px
    border none
    border-radius 50%

    &:hover
      cursor: pointer

    &:focus
      box-shadow: inset 0 0 3px 2px rgba(0,0,0,0.07)

.card-action
  .comment
    background: url('../images/comment.svg') no-repeat

.card-action
  .like
    background: url('../images/like.svg') no-repeat

// Footer context
.card-footer
  .card-action
    margin: 0 0 0 15px
