.card-header
  display: inline-block
  position: relative
  width: 100%
  max-width: 420px
  height: 240px

.stack
  .card-header
    height: 95px
    width: 130px
    float: left

.card-header
  .card-header-hero
    width: 100%
    height: 100%
    border-top-left-radius: 3px
    border-top-right-radius: 3px
    background-size: cover
    overflow: hidden

.card-header
  .badge
    position: absolute
    bottom: -13px
    right: 20px
    display: inline-block
    padding: 0 30px
    height: 26px
    line-height: 26px
    background: #000000
    text-align: center;
    border-radius: 13px
    text-transform: uppercase
    font-weight: 600
    font-size: 1.2rem
    color: #FFFFFF

.stack
  .card-header
    .badge
      display: none

.card-header
  .avatar
    width 60px
    height 60px
    border-radius: 32px
    border: 2px solid #FFFFFF
    position: absolute
    bottom: -30px
    left: 20px

.stack
  .card-header
    .avatar
      left: 98px;
      top: 18px;
