.card
  position: relative
  max-width: 340px
  min-width: 300px
  width: 100%
  font-weight: 300
  background: #fff
  border: 1px solid transparent
  box-shadow: 0 3px 6px rgba(0,0,0,0.05), 0 3px 6px rgba(0,0,0,0.07)
  overflow: hidden
  border-radius: 3px
  margin: 0 0 40px 0
  transition: all 0.25s cubic-bezier(0.165, 0.84, 0.44, 1)

  &:hover
    box-shadow: 0 19px 38px rgba(0,0,0,0.05), 0 15px 12px rgba(0,0,0,0.07)

@media screen and (min-width: 481px)
  .card
    float: left
    margin: 0 40px 40px 0

.card-grid
  width: 100%

  &:after
    content ''
    display table
    clear both
